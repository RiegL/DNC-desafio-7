{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es6",                        // Atualizado para es6
    "module": "commonjs",                   // Definido explicitamente
    "moduleResolution": "node",             // Adicionado para resolução de módulos
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["./src/**/*"]
}
